            case "Errors Leading To Shot":
                players = players.OrderBy(p => p.OverallStatsDto.ErrorLeadToAShot);
                break;
            case "Average Rating":
                players = players.OrderBy(p => p.OverallStatsDto.AverageRating);
                break;
        }
    }

