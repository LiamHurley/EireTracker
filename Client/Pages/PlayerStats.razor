                    break;
                case "All":
                    DisplayAllPlayers();
                    break;
                case "Outfielders":
                    DisplayOutfielders();
                    break;
                case "Defenders":
                    DisplayDefenders();
                    break;
                case "Midfielders":
                    DisplayMidfielders();
                    break;
                case "Forwards":
                    DisplayForwards();
                    break;
            }

            previousPlayersState = players;
            numberOfPages = (int)Math.Ceiling(Convert.ToDouble(players.Count()) / Convert.ToDouble(int.Parse(recordsPerPage)));
            players = players.Take(int.Parse(recordsPerPage));
        }    
    }

